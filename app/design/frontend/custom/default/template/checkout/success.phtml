$productsSkuList = '';
$productsQtyList = '';
$productsNamesList = '';
$productsSubTotal = '';

foreach ($order_details->getItemsCollection() as $item) {
    if ($item->getQtyToInvoice() > 0) {
        if (strlen($productsSkuList) > 0) {
            $productsSkuList .= "|";
            $productsQtyList .= "|";
        }
        $productsSubTotal[] = $item->getPrice() * $item->getQtyToInvoice() * 100;
        $productsSkuList .= $item->getSku();
        $productsQtyList .= $item->getQtyToInvoice();
        $productsNamesList[] = trim($item->getName());
    }
}
$productsSkuList = str_replace(" ", "%20", trim($productsSkuList));
$productsQtyList = str_replace(" ", "%20", trim($productsQtyList));
$discount = '';
$discountQty = '';
if($order_details->getData('discount_amount') != 0) {
    $productsSkuList .= "|Discount";
    $productsNamesList[] = "Discount";
    $discount = '|' . $order_details->getData('discount_amount') * 100;
    $discountQty = '|0';
}
