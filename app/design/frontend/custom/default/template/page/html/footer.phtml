	jQuery(document).ready(function() {
		//Back to top button
		var windowScroll_t;
		jQuery(window).scroll(function(){			
			clearTimeout(windowScroll_t);
			windowScroll_t = setTimeout(function() {										
				if (jQuery(this).scrollTop() > 100)	{
					jQuery('.catalog-category-view #scroll-to-top').fadeIn();
				} else {
					jQuery('.catalog-category-view #scroll-to-top').fadeOut();
				}			
			});			
		});		
		jQuery('.catalog-category-view #scroll-to-top').click(function(){
			jQuery("html, body").animate({scrollTop: 0}, 1000);
			return false;
		});
	});
	
</script>	
