<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Amasty_Scheckout>
            <version>1.1.16</version>
        </Amasty_Scheckout>
    </modules>
    <admin>
        <routers>
            <amscheckout>
                <use>admin</use>
                <args>
                    <module>Amasty_Scheckout</module>
                    <frontName>amscheckout</frontName>
                </args>
            </amscheckout>
            <amorderattr>
                <use>admin</use>
                <args>
                    <module>Amasty_Orderattr</module>
                    <frontName>orderattr</frontName>
                </args>
            </amorderattr>
            <amtable>
                <use>admin</use>
                <args>
                    <module>Amasty_Table</module>
                    <frontName>amtable</frontName>
                </args>
            </amtable>
        </routers>
    </admin>
    <frontend>
        <translate>
            <modules>
                <Amasty_Scheckout>
                    <files>
                        <default>Amasty_Scheckout.csv</default>
                    </files>
                </Amasty_Scheckout>
            </modules>
        </translate>
    </frontend>    
    <adminhtml>
        <translate>
            <modules>
                <Amasty_Scheckout>
                    <files>
                        <default>Amasty_Scheckout.csv</default>
                    </files>
                </Amasty_Scheckout>
            </modules>
        </translate>
        <menu>
            <system>
                <children>
                    <scheckout_adminsetting translate="title">
                        <title>Amasty Single Step Checkout</title>
                        <action>amscheckout/adminhtml_settings</action>
                        <sort_order>300</sort_order>
                    </scheckout_adminsetting>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <amscheckout translate="title" module="amscheckout">
                                            <title>Single Step Checkout</title>
                                        </amscheckout>
                                    </children>
                                </config>
                                <amscheckout_adminsetting translate="title" module="amscheckout">
                                    <title>Amasty Single Step Checkout</title>
                                </amscheckout_adminsetting>
                            </children>
                        </system> 
                     </children>
                </admin> 
            </resources>
        </acl>
        
        <layout>
            <updates>
                <amscheckout>
                    <file>amscheckout.xml</file>
                </amscheckout>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <amscheckout>
                <class>Amasty_Scheckout_Model</class>
                <resourceModel>amscheckout_mysql4</resourceModel>
            </amscheckout>
            <amscheckout_mysql4>
                <class>Amasty_Scheckout_Model_Mysql4</class>
                <entities>
                    <config>
                        <table>am_scheckout_config</table>
                    </config>
                    <area>
                        <table>am_scheckout_area</table>
                    </area>
                    <area_store>
                        <table>am_scheckout_area_store</table>
                    </area_store>
                    <field>
                        <table>am_scheckout_field</table>
                    </field>
                    <field_store>
                        <table>am_scheckout_field_store</table>
                    </field_store>
                    
                    <country>
                        <table>am_scheckout_country</table>
                    </country>
                    <block>
                        <table>am_scheckout_block</table>
                    </block>
                    <location>
                        <table>am_scheckout_location</table>
                    </location>
                </entities>
            </amscheckout_mysql4>
        </models>
        <resources>
             <amscheckout_setup>
                <setup>
                    <module>Amasty_Scheckout</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </amscheckout_setup>
            <amscheckout_write>
                <connection><use>core_write</use></connection>
            </amscheckout_write>
            <amscheckout_read>
                <connection><use>core_read</use></connection>
            </amscheckout_read>
        </resources>
        <blocks>
            <amscheckout>
                <class>Amasty_Scheckout_Block</class>
            </amscheckout>
            <adminhtml>
                <rewrite></rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <amscheckout>
                <class>Amasty_Scheckout_Helper</class>
            </amscheckout>
        </helpers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <amscheckout>
                        <class>amscheckout/observer</class>
                        <method>onControllerActionPredispatch</method>
                    </amscheckout>
                </observers>
            </controller_action_predispatch>
           
            <controller_action_layout_load_before>
                <observers>
                    <amscheckout>
                        <class>amscheckout/observer</class>
                        <method>onControllerActionLoadLayoutBefore</method>
                    </amscheckout>
                </observers>
            </controller_action_layout_load_before>
            <controller_action_layout_generate_blocks_after>
                <observers>
                    <amscheckout>
                        <class>amscheckout/observer</class>
                        <method>onControllerActionLayoutGenerateBlocksAfter</method>
                    </amscheckout>
                </observers>
            </controller_action_layout_generate_blocks_after>
            <controller_action_layout_render_before_checkout_onepage_index>
                <observers>
                    <amscheckout>
                        <class>amscheckout/observer</class>
                        <method>onControllerActionLayoutRenderBeforeCheckoutOnepageIndex</method>
                    </amscheckout>
                </observers>
            </controller_action_layout_render_before_checkout_onepage_index>
            <controller_action_layout_render_before_checkout_cart_index>
                <observers>
                    <amscheckout>
                        <class>amscheckout/observer</class>
                        <method>onControllerActionLayoutRenderBeforeCheckoutOnepageIndex</method>
                    </amscheckout>
                </observers>
            </controller_action_layout_render_before_checkout_cart_index>
            <controller_action_layout_render_before_amscheckout_onepage_index>
                <observers>
                    <amscheckout>
                        <class>amscheckout/observer</class>
                        <method>onControllerActionLayoutRenderBeforeCheckoutOnepageIndex</method>
                    </amscheckout>
                </observers>
            </controller_action_layout_render_before_amscheckout_onepage_index>
            </events>
    </global>
    <frontend>
        <layout>
              <updates>
                  <amscheckout module="Amasty_Scheckout">
                      <file>amscheckout.xml</file>
                  </amscheckout>
              </updates>
        </layout>
    </frontend>
    <default>
        <amscheckout>
            <shopping_cart>
                <checkout>0</checkout>
                <cart_to_checkout>0</cart_to_checkout>
                <qty_updatable>1</qty_updatable>
                <editable>1</editable>
                <delitable>1</delitable>
            </shopping_cart>
        </amscheckout>
    </default>
</config>