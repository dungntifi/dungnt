<config>
    <events>
        <am_grid_massaction_actions>
            <observers>
                <amflags>
                    <type>singleton</type>
                    <class>amflags/observer</class>
                    <method>addNewActions</method>
                </amflags>
            </observers>
        </am_grid_massaction_actions>

        <am_grid_massaction_js>
            <observers>
                <amflags>
                    <type>singleton</type>
                    <class>amflags/observer</class>
                    <method>modifyJs</method>
                </amflags>
            </observers>
        </am_grid_massaction_js>
    </events>

    <layout>
        <updates>
            <amflags>
                <file>amflags.xml</file>
            </amflags>
        </updates>
    </layout>

    <menu>
        <sales>
            <children>
                <amomanager translate="title">
                    <title>Order Manager</title>
                    <sort_order>19</sort_order>
                    <children>
                        <amflags translate="title" module="amflags">
                            <title>Flags</title>
                            <children>
                                <columns translate="title" module="amflags">
                                    <title>Columns</title>
                                    <action>amflags/adminhtml_column</action>
                                </columns>
                                <flags translate="title" module="amflags">
                                    <title>Manage Flags</title>
                                    <action>amflags/adminhtml_flag</action>
                                </flags>
                            </children>
                            <sort_order>19</sort_order>
                        </amflags>
                    </children>
                </amomanager>
            </children>
        </sales>
    </menu>

    <translate>
        <modules>
            <Amasty_Flags>
                <files>
                    <default>Amasty_Flags.csv</default>
                </files>
            </Amasty_Flags>
        </modules>
    </translate>

    <acl>
        <resources>
            <admin>
                <children>
                    <sales>
                        <children>
                            <amomanager translate="title">
                                <title>Order Manager</title>
                                <sort_order>19</sort_order>
                                <children>
                                    <amflags translate="title">
                                        <title>Flags</title>
                                        <children>
                                            <columns translate="title">
                                                <title>Columns</title>
                                            </columns>
                                            <flags translate="title">
                                                <title>Manage Flags</title>
                                            </flags>
                                        </children>
                                        <sort_order>19</sort_order>
                                    </amflags>
                                </children>
                            </amomanager>
                        </children>
                    </sales>
                </children>
            </admin>
        </resources>
    </acl>
</config>