<?xml version="1.0"?>
<config>
    <modules>
        <OpsWay_SimpleImages>
            <version>0.1.0</version>
        </OpsWay_SimpleImages>
    </modules>
    <global>
        <blocks>
            <simpleimages>
                <class>OpsWay_SimpleImages_Block</class>
            </simpleimages>
        </blocks>
        <models>
            <simpleimages>
                <class>OpsWay_SimpleImages_Model</class>
            </simpleimages>
        </models>
        <helpers>
            <simpleimages>
                <class>OpsWay_SimpleImages_Helper</class>
            </simpleimages>
        </helpers>
        <resources>
            <opsway_simpleimages_setup>
                <setup>
                    <module>OpsWay_SimpleImages</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </opsway_simpleimages_setup>
            <opsway_simpleimages_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </opsway_simpleimages_write>
            <opsway_simpleimages_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </opsway_simpleimages_read>
        </resources>
    </global>
    <admin>
        <routers>
            <simpleimages_controller>
                <use>admin</use>
                <args>
                    <module>OpsWay_SimpleImages</module>
                    <frontName>simpleimages</frontName>
                </args>
            </simpleimages_controller>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <simpleimages>
                    <file>simpleimages.xml</file>
                </simpleimages>
            </updates>
        </layout>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <simpleimages_save_product_data>
                        <type>singleton</type>
                        <class>simpleimages/observer</class>
                        <method>saveProductTabData</method>
                    </simpleimages_save_product_data>
                </observers>
            </catalog_product_prepare_save>
        </events>
    </adminhtml>
</config>