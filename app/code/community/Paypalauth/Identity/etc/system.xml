<?xml version="1.0" encoding="UTF-8"?>
<config>

	<sections>
	
		<customer>
			<groups>
				<startup>
					<fields>
						<paypalauth_enabled translate="label">
							<frontend_model>paypalauth_identity/adminhtml_form_field_enable
							</frontend_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</paypalauth_enabled>
						
						<paypalauth_clientid translate="label">
							<frontend_model>paypalauth_identity/adminhtml_form_field_clientid
							</frontend_model>
							<sort_order>5</sort_order>
							<frontend_type>obscure</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</paypalauth_clientid>
						<paypalauth_secret translate="label">
							<frontend_model>paypalauth_identity/adminhtml_form_field_secret
							</frontend_model>
							<sort_order>6</sort_order>
							<frontend_type>obscure</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</paypalauth_secret>
						<paypalauth_sandboxenabled translate="label">
							<frontend_model>paypalauth_identity/adminhtml_form_field_sandbox
							</frontend_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</paypalauth_sandboxenabled>
					</fields>
				</startup>
			</groups>
		</customer>
		
		<payment>
			<groups>
				<paypallightbox>
					<label>Paypal Express Checkout In-Context</label>
					<expanded>1</expanded>
					<frontend_type>text</frontend_type>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<fields>
						<enable translate="label">
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>The site must be securely hosted on an HTTPS server.</comment>
						</enable>
						
						<sandbox translate="label">
							<label>Sandbox</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</sandbox>
						
						
					</fields>
				</paypallightbox>
			</groups>
		</payment>
		
	</sections>
</config>