<config>
    <modules>
        <AudereCommerce_ProCategory>
            <version>3</version>
        </AudereCommerce_ProCategory>
    </modules>
    <global>
        <helpers>
            <auderecommerce_procategory>
                <class>AudereCommerce_ProCategory_Helper</class>
            </auderecommerce_procategory>
        </helpers>        
        <blocks>
            <auderecommerce_procategory>
                <class>AudereCommerce_ProCategory_Block</class>
            </auderecommerce_procategory>
        </blocks>
        <models>
            <auderecommerce_procategory>
                <class>AudereCommerce_ProCategory_Model</class>
                <resourceModel>auderecommerce_procategory_resource</resourceModel>
            </auderecommerce_procategory>
            <auderecommerce_procategory_resource>
                <class>AudereCommerce_ProCategory_Model_Resource</class>
                <entities>
                    <rule>
                        <table>auderecommerce_procategory</table>
                    </rule>
                    <category_product>
                        <table>auderecommerce_procategory_category_product</table>
                    </category_product>
                </entities>
            </auderecommerce_procategory_resource>
        </models>
        <resources>
            <auderecommerce_procategory_setup>
                <setup>
                    <module>AudereCommerce_ProCategory</module>
                </setup>
            </auderecommerce_procategory_setup>
        </resources> 
        <auderecommerce_procategory>
            <related_cache_types>
                <block_html/>
            </related_cache_types>
        </auderecommerce_procategory>               
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <auderecommerce_procategory before="Mage_Adminhtml">AudereCommerce_ProCategory_Adminhtml</auderecommerce_procategory>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <adminhtml_catalog_category_tabs>
                <observers>
                    <auderecommerce_procategory_adminhtml_catalog_category_tabs>
                        <class>auderecommerce_procategory/observer_adminhtml</class>
                        <method>adminhtmlCatalogCategoryTabs</method>
                    </auderecommerce_procategory_adminhtml_catalog_category_tabs>
                </observers>
            </adminhtml_catalog_category_tabs>
            <catalog_product_save_after>
                <observers>
                    <auderecommerce_catalog_product_save_after>
                        <class>auderecommerce_procategory/observer_adminhtml</class>
                        <method>catalogProductSaveAfter</method>
                    </auderecommerce_catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <catalog_entity_attribute_delete_after>
                <observers>
                    <auderecommerce_procategory_catalog_entity_attribute_delete_after>
                        <class>auderecommerce_procategory/observer_adminhtml</class>
                        <method>catalogEntityAttributeDeleteAfter</method>
                    </auderecommerce_procategory_catalog_entity_attribute_delete_after>
                </observers>
            </catalog_entity_attribute_delete_after>
            <catalog_entity_attribute_save_after>
                <observers>
                    <auderecommerce_procategory_catalog_entity_attribute_save_after>
                        <class>auderecommerce_procategory/observer_adminhtml</class>
                        <method>catalogEntityAttributeSaveAfter</method>
                    </auderecommerce_procategory_catalog_entity_attribute_save_after>
                </observers>
            </catalog_entity_attribute_save_after>            
        </events>
        <layout>
            <updates>
                <auderecommerce_procategory>
                    <file>auderecommerce/procategory.xml</file>
                </auderecommerce_procategory>
            </updates>
        </layout>
        <translate>
            <modules>
                <AudereCommerce_ProCategory>
                    <files>
                        <default>AudereCommerce_ProCategory.csv</default>
                    </files>
                </AudereCommerce_ProCategory>
            </modules>
        </translate>
    </adminhtml>  
    <crontab>
        <jobs>
            <auderecommerce_procategory_apply_all>
                <schedule>
                    <cron_expr>0 1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>auderecommerce_procategory/cron::applyAll</model>
                </run>
            </auderecommerce_procategory_apply_all>
        </jobs>
    </crontab>       
</config>