<?xml version="1.0"?>
<config>
	<tabs>
		<magik translate="label" module="pricedropalert">
			<label>Magik</label>
			<sort_order>251</sort_order>
		</magik>
	</tabs>
	<sections>
		<pricedrop_section translate="label" module="pricedropalert">
			<label>Pricedrop Alert Settings</label>
			<tab>magik</tab> 
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<pricedrop_general translate="label">
					<label>General Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>                   
						<pricedrop_enabled translate="label" module="pricedropalert">
							<label>Enable Pricedrop Alert Module</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_enabled>
						<pricedrop_description translate="label">
							<label>Message to display in pop up</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_description>
						<pricedrop_subscribe translate="label">
							<label>Subscription message text</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_subscribe>     						
						<pricedrop_unsubscribe translate="label">
							<label>Unscbscription message text</label>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_unsubscribe>                  
						<pricedrop_imagefield> 
							<label>Upload Pricedrop Alert Image</label>
							<frontend_type>image</frontend_type>
							<backend_model>adminhtml/system_config_backend_image</backend_model>
							<upload_dir config="system/filesystem/media" scope_info="0">magikuploaddir</upload_dir> 
							<base_url type="media" scope_info="0">magikuploaddir</base_url>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_imagefield>
						<pricedrop_emailreply translate="label" module="pricedropalert">
							<label>Sender Email</label>
							<frontend_type>text</frontend_type>
							<validate>required-entry</validate>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_emailreply>
						<pricedrop_emailreplyname translate="label" module="pricedropalert">
							<label>Sender Name</label>
							<frontend_type>text</frontend_type>
							<validate>required-entry</validate>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_emailreplyname>
						<pricedrop_template translate="label" module="pricedropalert">
							<label>Email Template</label>
							<frontend_type>select</frontend_type>							
							<sort_order>8</sort_order>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment></comment>
						</pricedrop_template>
						<pricedrop_thanksmsg translate="label" module="pricedropalert">
							<label>Confirmation Meassge in Pop up</label>
							<frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_thanksmsg>    
						<pricedrop_exists_thanksmsg translate="label" module="pricedropalert">
							<label>Confirmation Meassge for already following price in pop up</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pricedrop_exists_thanksmsg> 
					</fields>
				</pricedrop_general>
			</groups>
		</pricedrop_section>
	</sections>  
</config>
